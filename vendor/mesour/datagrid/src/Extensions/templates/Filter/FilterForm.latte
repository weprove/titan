{snippet filter}

{if $filter_form instanceof Nette\Application\UI\IRenderable}
	{$filter_form->validateControl()}
{/if}
<div class="panel panel-default">
	<div class="panel-heading">{_('Filter')}</div>
	<div class="panel-body filter custom-filter-form">
		{if $form_template}
		{include $form_template form => $filter_form}
		{else}
		{$filter_form->render()|noescape}
		{/if}
	</div>
</div>
{/snippet}