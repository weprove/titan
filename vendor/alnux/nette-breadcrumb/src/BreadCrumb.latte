{*
 * BreadCrumb Template
 *
 * @author David Zadrazil <me@davidzadrazil.cz>
 *}

<ol class="breadcrumb">
	<li n:foreach="$links as $link" {if !$link['link']}class="active"{/if}>
		{if $link['link']}
			<a href="{$link['link']}" title="{$link['title']}"><i class="{$link['icon']}" n:if="$link['icon']"></i> {$link['title']}</a>
		{else}
			<i class="{$link['icon']}" n:if="$link['icon']"></i> {$link['title']}
		{/if}
		<i class="icon-angle-right" n:if="!$iterator->isLast()"></i>
	</li>
</ol>
